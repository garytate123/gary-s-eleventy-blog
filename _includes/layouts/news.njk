---

layout: layouts/base.njk
templateClass: tmpl-news

---

<div class="container">
    <div class="text-center">
        <h1>Our News</h1>
        <hr>
        <br>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h1>{{title}}</h1>
            <br>
            <h5>{{description}}</h5>
        </div>
        <div class="col-md-6">

            <div class="container">
                <p>Posts tags.</p>
                <h3>
                    {% for tag in tags %}
                        {%- if collections.tagList.indexOf(tag) != -1 -%}
                            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                            <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
                        {%- endif -%}
                    {% endfor %}
                </h3>
                <p>See
                    <a href="{{ '/tags/' | url }}">all tags</a>.</p>
            </div>
        </div>
    </div>
    <hr>
    <br>
    <div class="row">
        <div class="col-md-6">
            {{ content | safe }}
        </div>
        <div class="col-md-6">
            <img src="{{thumbnail}}"/>
        </div>
    </div>
    <hr>
</div>