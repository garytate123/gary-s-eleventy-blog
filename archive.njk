---
layout: layouts/home.njk
permalink: /posts/
eleventyNavigation:
  key: Blog Archive
  order: 2
---
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Blogs Archive</h1>
      <br>
      {% set postslist = collections.posts %}
      {% set postslistCounter = collections.news | length %}
      {% include "postslist.njk" %}
    </div>

    <div class="col-md-6">
      <div>
        <h1>Tags
          <a href="{{ '/news/' | url }}" class="post-tag">News</a>
          <a href="{{ '/posts/'| url }}" class="post-tag">Blogs</a>
        </h1>
      </div>
      <br>
      <h1>
        {% for tag in collections.tagList %}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
        {% endfor %}
      </h1>

    </div>
  </div>
</div>